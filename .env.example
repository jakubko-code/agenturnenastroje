# NextAuth
AUTH_SECRET=replace-with-long-random-secret
AUTH_GOOGLE_ID=replace-google-client-id
AUTH_GOOGLE_SECRET=replace-google-client-secret
AUTH_TRUST_HOST=true

# Comma-separated emails and/or a domain restriction
ALLOWED_EMAILS=owner@agentura.sk
ALLOWED_DOMAIN=agentura.sk

# Prisma
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agenturne_ai

# Encryption key for provider keys (32 bytes base64)
ENCRYPTION_KEY_BASE64=replace-with-32-byte-base64

# Optional shared provider keys (fallback if DB keys not set)
OPENAI_API_KEY=
GEMINI_API_KEY=
CLAUDE_API_KEY=
